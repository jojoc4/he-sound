@model IEnumerable<HESound.Models.Sound>

@{
    ViewData["Title"] = "Sons";
}

<h1>Sons</h1>

<p>
    <a asp-action="Create">Ajouter</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SoundId">Éditer</a> |
                <a asp-action="Details" asp-route-id="@item.SoundId">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.SoundId">Suprimmer</a>
            </td>
        </tr>
}
    </tbody>
</table>
